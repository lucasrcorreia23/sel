{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@library/*": ["app/_lib/*"],
      "@components/*": ["app/_components/*"],
   "@data/*": ["/data/*"],
 
      "@common/*": ["app/_common/*"],
      "@styles/*": ["app/_styles/*"],
      "@layouts/*": ["app/_layouts/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,         
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "target": "es2020",   
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
